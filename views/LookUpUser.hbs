        <div class="modal modal-search fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModal"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="SEARCH">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <i class="tim-icons icon-simple-remove"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            {{#if alert}}
                {{#if alert.alert}}
                <div class="row">
                    <div class="col">
                        <div class="container" style="margin-top: 2vh; margin-left: 1.2vw;">
                        <div class="alert alert-success alert-dismissible fade show" role="alert"
                        style=" margin-left: -2.5vw;">
                        {{alert.message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top: 0.2vh;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            {{/if}}
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-title text-center" style="margin-top: 3vh; border-bottom: 1px solid #363c53;">
                            <h3>Data for <strong>{{lookedUpUser.username}}#{{lookedUpUser.discriminator}}</strong></h3>
                        </div>
                        <div class="card-body" style="color: white; margin-left: 1vw;">
                            <div class="text-right" style="color: white;padding-right: 1vw;"><a onclick="edit();" style=" color: white;"><i class="fas fa-cog"></i></a></div>
                            <div id="show-UserData" style="display: block;">
                                <strong>Discord ID</strong>: {{lookedUpUser.discordID}}<br><br>
                                <strong>Avatar</strong>:<br> <a href="https://cdn.discordapp.com/avatars/{{lookedUpUser.discordID}}/{{lookedUpUser.avatar}}"><img width="8%" src="https://cdn.discordapp.com/avatars/{{lookedUpUser.discordID}}/{{lookedUpUser.avatar}}" alt="{{lookedUpUser.username}}'s avatar on Discord"></a><br><br>
                                <strong>Plan</strong>: {{lookedUpUser.plan}}<br><br>
                                <strong>Redeemed Key</strong>: {{lookedUpUser.dateBought}}<br><br>
                                <strong>Banned Right Now</strong>: {{lookedUpUser.banned}}<br><br>
                                <strong>Beta Access</strong>: {{#if lookedUpUser.beta}} True {{else}} False {{/if}}
                            </div>
                             <div id="edit-UserData" style="display: none;">
                                 <form class="form" style="color: white;" method="POST" action="/admin/user/lookup/{{lookedUpUser.discordID}}">
                                    <div class="form-group">
                                        <label for="{{lookedUpUser.discordID}}_DISCORDID"><strong style="color: white;">Discord ID:</strong></label><br>
                                        <input id="{{lookedUpUser.discordID}}_DISCORDID" style="width: 100%; background-color: #1e1e2f; color: lightgray; border: 1px solid #cad1d7; border-radius: 0.25rem; height: calc(2.25rem + 2px);" name="DiscordID" type="text" disabled value=" {{lookedUpUser.discordID}}"
                                    </div><br>
                                    <div class="form-group">
                                        <label for="{{lookedUpUser.discordID}}_AVATAR"><strong style="color: white;">Avatar:</strong></label><br>
                                        <input id="{{lookedUpUser.discordID}}_AVATAR" type="text" style="width: 100%; background-color: #1e1e2f; color: lightgray; border: 1px solid #cad1d7; border-radius: 0.25rem; height: calc(2.25rem + 2px);" disabled value=" https://cdn.discordapp.com/avatars/{{lookedUpUser.discordID}}/{{lookedUpUser.avatar}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="{{lookedUpUser.discordID}}_PLAN"><strong style="color: white;">Plan:</strong></label><br>
                                        <select id="{{lookedUpUser.discordID}}_PLAN" class="custom-select" style="background-color: #1e1e2f;" name="plan" value="">
                                            <option selected>{{lookedUpUser.plan}}</option>
                                            {{#each plans}}
                                                <option>{{this.plan}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="{{lookedUpUser.discordID}}_REDEEMEDKEY"><strong style="color: white;">Date Bought:</strong></label><br>
                                        <input id="{{lookedUpUser.discordID}}_REDEEMEDKEY" style="width: 100%; background-color: #1e1e2f; color: lightgray; border: 1px solid #cad1d7; border-radius: 0.25rem; height: calc(2.25rem + 2px);" type="datetime" disabled value=" {{lookedUpUser.dateBought}}">
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="{{lookedUpUser.discordID}}_BETA" value="true" name="BetaAccess" {{#if lookedUpUser.beta}} checked {{/if}} style="opacity: 1; visibility: visible; margin-left: 0rem;">
                                        <label class="form-check-label" for="{{lookedUpUser.discordID}}_BETA"><strong style="color: white;">
                                            Beta Access
                                        </strong></label>
                                    </div>
                                    <button class="btn btn-success" type="submit">Save!</button>
                                </form>
                                <button class="btn btn-danger" type="button" data-toggle="collapse" data-target="#BanCollapse" aria-controls="BanCollapse">Ban!</button>
                                <br><br><br>
                                <div id="BanCollapse" class="collapse">
                                    <div class="card" style="background-color: #212529;">
                                        <div class="card-title text-center">
                                            <h3 class="mt-3" style="color: red;"><strong>Ban Menu</strong></h5>
                                        </div>
                                        <div class="card-body">
                                            <form class="form" method="POST" action="/admin/user/ban/{{lookedUpUser.discordID}}">
                                                <div class="form-group">
                                                    <label for="length">Length:</label><br>
                                                    <input class="form-control" id="length" type="text" placeholder="P = permanent. Otherwise enter like 3Y, 1M, 3W, 4D, 5H" name="length">
                                                </div>
                                                <div class="form-group">
                                                    <label for="BanReason">Reason:</label><br>
                                                    <input class="form-control" id="BanReason" type="text" placeholder="They were mean" name="reason">
                                                </div>
                                                <button type="submit" class="btn btn-danger">Confirm</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div id="KickCollapse" class="collapse">
                                    <div class="card" style="background-color: #212529;">
                                        <div class="card-title text-center">
                                            <h3 class="mt-3" style="color: red;"><strong>Kick Menu</strong></h5>
                                        </div>
                                        <div class="card-body">
                                            <form class="form" method="POST" action="/admin/user/kick/{{lookedUpUser.discordID}}">
                                                <div class="form-group">
                                                    <label for="KickReason">Reason:</label><br>
                                                    <input class="form-control" id="KickReason" type="text" placeholder="They were mean" name="reason">
                                                </div>
                                                <button type="submit" class="btn btn-danger">Confirm</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <div class="copyright">
                    Â©2020 WispaGen
                </div>
            </div>
        </footer>
    </div>
</div>
<script>
    function edit() {
        let before = document.getElementById("show-UserData");
        let after = document.getElementById("edit-UserData");
        if(before.style.display == "block") {
            before.style.display = "none";
            after.style.display = "block";
        } else {
            before.style.display = "block";
            after.style.display = "none";
        }
    }
</script>
